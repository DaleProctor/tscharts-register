<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registration_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/headshot_image_main"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/girlfront" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/summary_name_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <TextView
                android:id="@+id/label_summary_name"
                android:layout_span="1"
                android:text="@string/label_summary_name"
                android:paddingRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/value_summary_name"
                android:layout_span="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

        <TableRow
            android:id="@+id/summary_id_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <TextView
                android:id="@+id/label_summary_id"
                android:layout_span="1"
                android:text="@string/label_summary_id"
                android:paddingRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/value_summary_id"
                android:layout_span="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

        <TableRow
            android:id="@+id/summary_dob_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <TextView
                android:id="@+id/label_summary_dob"
                android:layout_span="1"
                android:paddingRight="20dp"
                android:text="@string/label_summary_dob"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/value_summary_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

        <TableRow
            android:id="@+id/summary_category_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <TextView
                android:id="@+id/label_summary_category"
                android:layout_span="1"
                android:text="@string/label_summary_category"
                android:paddingRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/value_summary_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <ImageView
                    android:id="@+id/value_summary_category"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/surgery" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
